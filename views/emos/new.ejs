<%- include('../partials/header') %>

<h1 class="selector-header">
    What Emoticon <br>
    Does this image evoke?
</h1>

                            <!-- Action is really a path where user input goes -->
                            <!-- Sends info to create controller, through the router(who is the middleman) -->
                            <!-- The content of the user input is the BODY!!!!! e.g. (req.body) -->
<form class="selector-container" action="/emos" method="POST">
    <img src='https://images.unsplash.com/photo-1561892608-9a4c0e4780c4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80' class="selector-img">
    <div class="selector-emoticons">
        <div class="selector-happy">&#x1F600;</div>
        <div class="selector-surprised">&#x1F632;</div>
        <div class="selector-angry">&#x1F620;</div>
        <div class="selector-sad">&#x1F62D;</div>
        <div class="selector-unphased">&#x1F610;</div>
        <div class="selector-warm">&#x1F60D;</div>
    </div>
    <div class="selector-comment">
        <textarea rows="4" cols="50" maxlength="200"></textarea>
    </div>
    <div class="selector-button">
        <a href="../show">
            <!-- <div class="fake-button">Plunge</div> -->
            <input type="submit" value="Plunge">
        </a>
    </div>
</form>

